.question-input
  position relative
  margin 0 auto
  display block
  font-family $baseFontFamily

.question-input-wrapper
  background rgba(255, 255, 255, 0.9)
  padding 5px 10px
  $border-radius($baseBorderRadius)

  textarea
    width 460px
    margin-right 10px

  .btn
    padding 4px 12px

.dot
  display block
  $border-radius(15px)
  width 30px
  height 30px
  background rgba(0, 0, 0, 0.2)
  cursor pointer