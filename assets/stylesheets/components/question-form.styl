.question-input
  position relative
  margin 0 auto
  display block
  font-family $baseFontFamily

.question-input-wrapper
  background rgba(255, 255, 255, 0.9)
  padding 5px 10px
  $border-radius($baseBorderRadius)

  textarea
    width 460px
    margin-right 10px

  .btn
    padding 4px 12px

.dot
  display block
  $border-radius(15px)
  width 28px
  height 28px
  padding 1px
  background rgba(210, 210, 210, .7)
  cursor pointer

  &.selected
    border 1px solid $linkColor
    padding 0

.discussion
  .dot
    $box-shadow(0 0 $baseBorderRadius $baseBorderRadius rgba(0,0,0,.5))
    

.discussion input.btn
  font-family 'Open Sans'
  padding: 4px 12px;
  margin-bottom: 0; // For input.btn
  font-size: $baseFontSize;
  line-height: $baseLineHeight;

.sub-navbar-view
  padding 20px 0px

.fixed
  position: fixed

.discussion-board-margin

.question-btn
  width 95%

.comment-btn
  width 89%
  margin-left 15px
  margin-right 15px

.first-comment-btn
  width 30%
  margin-left 15px
  margin-right 15px


.question-row
  padding 0px
  margin 0px


.discussion-board-component

  .questions-header
    background-color #E3E3E3

  .question-box, .answer-box
    border 1px solid #E3E3E3
    box-shadow 0 1px 1px rgba(0, 0, 0, 0.05)
    margin $paddingHorSmall $paddingHorSmall 0
    border-radius 4px

  .comment-box
    border-bottom 1px solid #E3E3E3
    border-left 1px solid white
    border-right white
    padding-top 0px
    padding-bottom 7px
    margin 5px $paddingHorSmall

  .tag
    display inline-block
    padding-right $paddingHorSmall
    font-weight bold

  .votes
    font-weight normal
    background-color #E3E3E3
    padding $paddingSmall
    padding-right 4px
    margin-right 6px
    border-radius 4px

    i
      margin-top 3px

  .grey-background
    color black
    background-color #E3E3E3
    padding 0px 0px 0px 0px
    border-right none
    margin-top 5px

  .votes,
  .grey-background
    cursor pointer

    &:hover
      color $grayLight

  form
    margin 0

  textarea.answer-input
    margin $paddingHorSmall

  .answer-box
    margin-left 2 * $paddingHorSmall

  .textarea-wrapper
    padding $paddingHorSmall

  .answer-textarea-wrapper
      padding $paddingHorSmall
      padding-left 2 * $paddingHorSmall

  textarea.answer-input,
  textarea.comment-answer-input,
  textarea.comment-question-input
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    margin 0
    width 100%

.question-box-margin
  padding 0px 10px

.row-padding
  padding 10px 10px
  width inherit


.post-btn
  background-color #6FB3E0
  margin-right 15px
  margin-bottom 0px

.second-post-btn
  background-color #6FB3E0
  margin-right 12px
  margin-bottom 0px
  margin-top 2px

.purple-background
  background-color #892E65
  margin 1px 1px 1px 1px

.well
  background-color white
  border 1px solid #E3E3E3
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.05) inset
  margin-bottom 20px
  padding 19px
  border-radius 4px

textarea.comment-textbox-width
  width 446px
  margin-right 1px
  margin-left 13px

textarea.answer-comment-textbox-width
  width 413px
  margin-left 1px
  margin-right 15px
  margin-bottom 2px
  margin-top 2px

.checkbox-margin
  margin-left 12px

.icon-margin
  margin-right 5px
  margin-left 5px