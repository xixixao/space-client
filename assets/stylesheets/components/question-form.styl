.question-input
  position relative
  margin 0 auto
  display block
  font-family $baseFontFamily

.question-input-wrapper
  background rgba(255, 255, 255, 0.9)
  padding 5px 10px
  $border-radius($baseBorderRadius)

  textarea
    width 460px
    margin-right 10px

  .btn
    padding 4px 12px

.dot
  display block
  $border-radius(15px)
  width 30px
  height 30px
  background rgba(0, 0, 0, 0.2)
  cursor pointer

.blue
  color #0088CC

.green
  color #69AA46

.discussion input.btn
  font-family 'Open Sans'
  padding: 4px 12px;
  margin-bottom: 0; // For input.btn
  font-size: $baseFontSize;
  line-height: $baseLineHeight;

.discussion

  .grey-background
    color black
    background-color #E3E3E3
    padding 0px 0px 0px 0px
    border-right white
    margin-top 5px

.sub-navbar-view
  padding 20px 0px

.fixed
  position: fixed

.discussion-board-margin

.question-btn
  width 95%

.comment-btn
  width 89%
  margin-left 15px
  margin-right 15px

.first-comment-btn
  width 30%
  margin-left 15px
  margin-right 15px


.question-row
  padding 0px
  margin 0px


.discussion-board-component

  .question-box, .answer-box
    border 1px solid #E3E3E3
    box-shadow 0 1px 1px rgba(0, 0, 0, 0.05) inset
    margin $paddingHorSmall $paddingHorSmall 0
    border-radius 4px

  .comment-box
    border-bottom 1px solid #E3E3E3
    border-left 1px solid white
    border-right white
    padding-top 0px
    padding-bottom 7px
    margin 5px $paddingHorSmall

  form
    margin 0

  textarea.answer-input
    margin $paddingHorSmall

  .answer-box
    margin-left 2 * $paddingHorSmall

  .textarea-wrapper
    padding $paddingHorSmall

  .answer-textarea-wrapper
      padding $paddingHorSmall
      padding-left 2 * $paddingHorSmall

  textarea.answer-input,
  textarea.comment-answer-input,
  textarea.comment-question-input
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    margin 0
    width 100%

.question-box-margin
  padding 0px 10px

.row-padding
  padding 10px 10px
  width inherit


.post-btn
  background-color #6FB3E0
  margin-right 15px
  margin-bottom 0px

.second-post-btn
  background-color #6FB3E0
  margin-right 12px
  margin-bottom 0px
  margin-top 2px

.purple-background
  background-color #892E65
  margin 1px 1px 1px 1px

.widget-header
  -moz-border-bottom-colors none
  -moz-border-left-colors none
  -moz-border-right-colors none
  -moz-border-top-colors none
  background linear-gradient(to bottom, #FFFFFF, #EEEEEE) repeat-x scroll 0 0 #F8F8F8
  border-color #CCCCCC #CCCCCC #DDDDDD
  border-image none
  border-style solid
  border-width 1px
  border-radius 4px
  color #669FC7
  min-height 38px
  padding-left 12px
  position relative
  text-align right

.well
  background-color white
  border 1px solid #E3E3E3
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.05) inset
  margin-bottom 20px
  padding 19px
  border-radius 4px

textarea.comment-textbox-width
  width 446px
  margin-right 1px
  margin-left 13px

textarea.answer-comment-textbox-width
  width 413px
  margin-left 1px
  margin-right 15px
  margin-bottom 2px
  margin-top 2px

.checkbox-margin
  margin-left 12px

.icon-margin
  margin-right 5px
  margin-left 5px