.question-input
  position relative
  margin 0 auto
  display block
  font-family $baseFontFamily

.question-input-wrapper
  background rgba(255, 255, 255, 0.9)
  padding 5px 10px
  $border-radius($baseBorderRadius)

  textarea
    width 460px
    margin-right 10px

  .btn
    padding 4px 12px

.dot
  display block
  $border-radius(15px)
  width 30px
  height 30px
  background rgba(0, 0, 0, 0.2)
  cursor pointer

.blue
  color #0088CC  

.green
  color #69AA46

.discussion input.btn
  font-family 'Open Sans'
  padding: 4px 12px;
  margin-bottom: 0; // For input.btn
  font-size: $baseFontSize;
  line-height: $baseLineHeight;



.sub-navbar-view
  padding 20px 0px
  background-colour #393939

.fixed
  position: fixed;  

.discussion-board-margin


.question-box
  background-color white
  border 1px solid #E3E3E3
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.05) inset
  padding 10px

.question-btn
  width 95%

.comment-btn
  width 89%
  margin-left 15px
  margin-right 15px

.first-comment-btn
  width 30%
  margin-left 15px
  margin-right 15px


.question-row
  margin 0px 0px 0px 0px

.comment-box
  background-color white
  border 1px solid #E3E3E3
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.05) inset
  margin-left 15px
  margin-right 15px
  padding 10px

.post-btn
  background-color #6FB3E0 

.purple-background
  background-color #892E65
  margin 1px 1px 1px 1px

.widget-header 
  -moz-border-bottom-colors none
  -moz-border-left-colors none
  -moz-border-right-colors none
  -moz-border-top-colors none
  background linear-gradient(to bottom, #FFFFFF, #EEEEEE) repeat-x scroll 0 0 #F8F8F8
  border-color #CCCCCC #CCCCCC #DDDDDD
  border-image none
  border-style solid
  border-width 1px
  color #669FC7
  min-height 38px
  padding-left 12px
  position relative
  text-align right

.well
  background-color white
  border 1px solid #E3E3E3
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.05) inset
  margin-bottom 20px
  padding 19px

