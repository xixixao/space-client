.tabbed-side-menu-component
  background-color $lightBackgroundColor
  border-bottom 1px solid $darkerBorderColor

  .tabbable
    padding-top $paddingHorSmall

    .nav-tabs
      border-color $darkerBorderColor
      margin-bottom 0
      padding-left $paddingHorSmall

      li
        a
          padding-top 8px
          padding-bottom 10px

      & > .active > a,
      & > .active > a:hover
        border-top-color $darkerBorderColor
        border-left-color $darkerBorderColor
        border-right-color $darkerBorderColor
        background-color $lightBackgroundColor
    .nav
      & > li > a:hover
        background-color $white
        border-bottom-color $darkerBorderColor
      & > .active > a:hover
        border-bottom-color $lightBackgroundColor


    .tab-content
      padding-top $paddingHorSmall
      border-right 1px solid $darkerBorderColor

  .list-menu
    .row-hover
      &:first-child
        border-top none
      &:hover
        background-color #fcfcfc
      border-top 1px solid $tableBorder
    a
      padding $paddingHorSmall
      padding-left 2 * $paddingHorSmall
      color $black
      display block
      &:hover
        text-decoration none
        border-left 5px solid $navbarBackgroundHighlight
        padding-left (2 * $paddingHorSmall) - 5px

    .text-preview
      color $gray