c0 = #fdd
c1 = #ddf
c2 = #dfd
// c0 = #343
// c1 = #334
// c2 = #010

.item
  margin 5px
  float left
  text-decoration none

.item:hover
  text-decoration none

.item-content
  background-color $grayLighter
  padding 10px
  width 80px
  height 80px
  color $textColor

  &.color0
    background-color c0

  &.color1
    background-color c1

  &.color2
    background-color c2


.custom-enter-setup,
.custom-leave-setup,
  transition 1s linear all
  position relative

.custom-enter-setup
  opacity 0
.custom-enter-setup.custom-enter-start
  opacity 1

.custom-leave-setup
  opacity 1
.custom-leave-setup.custom-leave-start
  opacity 0

