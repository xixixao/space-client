doctype 5
html(lang="en")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Angular Demo
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width')

    link(rel='stylesheet', href='/stylesheets/theme.css' + cachebust)
    link(rel='stylesheet', href='/stylesheets/styles.css' + cachebust)

    if reload
      script(src='/socket.io/socket.io.js')
      script(src='/javascripts/reload-client.js')

    if optimize
      script(src='/javascripts/main-built.js')
    else
      script(src='/javascripts/vendor/require.js', data-main='/javascripts/main.js')



  body(ng-cloak='ng-cloak', ng-controller='phoneList')
    .container-fluid
      .row-fluid
        .span2
          | Search:
          input(ng-model='query')
          | Sort by:
          select(ng-model='orderProp')
            option(value='name') Alphabetical
            option(value='age') Newest
        .span10
          ul
            a(ng-repeat='phone in phones | filter:query | orderBy:orderProp', data-ng-animate="'custom'", href='{{phone.uri}}').thumbnail.item
              .item-content(class='color{{phone.color}}')
                {{phone.name}}
                div

