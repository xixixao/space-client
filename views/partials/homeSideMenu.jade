.tabbed-side-menu-component.tb
  tabs
    tab(data-tab-id='feed', caption='Topics')
      table.table.table-hover
        tbody
          tr(ng-repeat='(id, topic) in user.topics | orderBy:"name"')
            td
              strong
                a.black(href='#/topics/{{topic._id}}') {{topic.name}}
    tab(data-tab-id='questions', caption='Questions')
      table.table.table-hover
        tbody
          tr(ng-repeat='question in user.events | filter:{url: "questions"} | fromUrl')
            td
              .row-fluid
                strong.red {{question.topic}}: {{question.file}}
              .row-fluid
                strong
                  em {{question.timestamp | date}} by {{question.owner.name}}:
              a.grey(href='#/preview/{{question.url}}') {{(question.text.substr(0, 75) + (question.text.length > 75 ? "..." : ""))}}