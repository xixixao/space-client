.tabbed-side-menu-component.tb
  tabs
    tab(data-tab-id='questions', caption='Questions')
      ul
        li(ng-repeat='question in user.events | filter:{url: "questions"} | fromUrl')
          a(href='#/preview/{{question.url}}') {{question.text}}
    tab(data-tab-id='feed', caption='Topics')
      ul
        li(ng-repeat='topics in user.topics | orderBy:"name"')
          a(href='#/topics/{{topics.id}}') {{topics.name}}