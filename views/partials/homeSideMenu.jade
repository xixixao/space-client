.tabbed-side-menu-component.tb
  tabs
    tab(data-tab-id='topics', caption='Topics')
      .list-menu
        .row-plain.row-hover(ng-repeat='topic in user.topics | orderBy:"name"')
          a(href='#/topics/{{topic._id}}') {{topic.name}}
    tab(data-tab-id='questions', caption='Questions')
      .list-menu
        .row-plain.row-hover(ng-repeat='question in questions | orderBy:"-modifiedTime"')
          a(href='#/{{constructURL(question.url)}}')
            .row-plain
              | {{question.topic.name}}
            .row-plain
              | - {{question.file.name}}
            .row-plain.text-preview
              | {{trim(question.text, 75)}}
            .row-plain
              em {{question.modifiedTime | date:"HH:mm, MMM d, yyyy"}} by {{question.owner.name}}