.login-box.tb
  .row
    .span6
      strong
        h1.text-center.logo SPACE
    .span6
      .span3
      .span6
        .visible.widget-box
          .widget-body
            .widget-main
              h4.text-center.blue.lighter-bigger
              form.login-form.form-horizontal(ng-submit='login()')
                .row.text-center
                    .login-margin
                      .control-group.field-margin
                        input.login-value-username(type='text', placeholder="Username", name='username', ng-model='values.username', focus-in)
                      .control-group.field-margin
                        input.login-value-password(type='password', placeholder="Password", name='password', ng-model='values.password')

                .text-center
                  input.btn.btn-medium.btn-primary.login-buttonLogin(type='submit', value='Log in')
                .row.text-center
                    p.text-error {{error}}
                .row-fluid.text-center
                  a.green() Forgot your password?
                .row-fluid.text-center 
                  a.green() Register
     .span3

