.news-component.tb
    .row-fluid
      .text-center
        h3.grey What's new in your SPACE?
    .row-hover.event(ng-repeat='event in events')
      a(href='#/{{constructURL(event.url)}}', ng-switch='event.model')
        .row-fluid(ng-switch-when='Question')
          .event-tag.red-background New question
          .event-label in {{event.target.topic.name}} -
            |  {{event.target.file.name}}
            span.blue  by {{event.target.owner.name}}
          .timestamp.pull-right
            {{event.timestamp | date}}
          .text-preview
            | {{trim(event.target.text, 280)}}

        .row-fluid(ng-switch-when='CommentQ')
          .event-tag.orange-background New comment
          .event-label in {{event.target.topic.name}} -
            |  {{event.target.file.name}}
            span.blue  by {{event.target.owner.name}}
          .timestamp.pull-right
            {{event.timestamp | date}}
          .text-preview
            | {{trim(event.target.text, 280)}}

        .row-fluid(ng-switch-when='CommentA')
          .event-tag.orange-background New comment
          .event-label in {{event.target.topic.name}} -
            |  {{event.target.file.name}}
            span.blue  by {{event.target.owner.name}}
          .timestamp.pull-right
            {{event.timestamp | date}}
          .text-preview
            | {{trim(event.target.text, 280)}}

        .row-fluid(ng-switch-when='Answer')
          .event-tag.green-background New answer
          .event-label in {{event.target.topic.name}} -
            |  {{event.target.file.name}}
            span.blue  by {{event.target.owner.name}}
          .timestamp.pull-right
            {{event.timestamp | date}}
          .text-preview
            | {{trim(event.target.text, 280)}}

        .row-fluid(ng-switch-when='Topic')
          .event-tag.purple-background New topic
          .event-label in {{event.target.topic.name}} -
            |  {{event.target.file.name}}
            span.blue  by {{event.target.owner.name}}
          .timestamp.pull-right
            {{event.timestamp | date}}

        .row-fluid(ng-switch-when='File')
          .event-tag.blue-background New files
          .event-label in {{event.target.topic.name}} -
            |  {{event.target.name}}
            span.blue  by {{event.target.owner.name}}
          .timestamp.pull-right
            {{event.date | date}}
